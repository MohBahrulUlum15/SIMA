<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="4dp"
    app:cardCornerRadius="8dp"
    app:layout_goneMarginEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/bg_item">

        <TextView
            android:id="@+id/tv_nama_karyawan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama karyawan"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_tempat_tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tempat, tanggal lahir"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alamat"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_no_handphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no handphone"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status pendaftar"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btn_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terima"
                android:backgroundTint="@color/blue_color"
                android:textAllCaps="false"
                android:layout_marginHorizontal="16dp"
                android:layout_toStartOf="@id/btn_tolak"/>
            <Button
                android:id="@+id/btn_tolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:backgroundTint="@color/red"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>